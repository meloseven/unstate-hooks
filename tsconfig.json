{
  "exclude": ["./node_modules"],
  "include": ["./src"],
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict":true,
    "declaration": true,
    "declarationDir": "./types",
    "jsx": "react",
    "lib": ["ES2015","ES2016","ES2017","ES2018","ES2019","DOM", "ESNext"],
    "target": "ES6",
    "module": "ESNext",
    "sourceMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./es",
    "moduleResolution": "node",
  }
}